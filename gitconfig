[user]
    name = "Gabriele Cipriano"
    email = gabri.cipriano@gmail.com
[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    ca = commit --amend
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    df = diff --color
    rmerge = merge --no-ff
    undo = reset --hard
    throw = reset --hard HEAD~1
    oops = commit --amend --reuse-message=HEAD
    nuke = ! git reset --hard && git clean -fxd
    fresh = ! git reset --hard && git clean -fd
    prev = checkout HEAD~
    d = difftool
    wch = whatchanged -p --abbrev-commit --pretty=medium -10
    last = ! git log -1 --pretty=%B | cowsay -f dragon-and-cow | lolcat
[core]
  excludesfile = ~/.gitignore_global
[merge]
    tool = vimdiff
[commit]
    verbose = true
[diff]
    tool = vimdiff
    compactionHeuristic = true
[branch]
    autosetupmerge = true
[push]
    default = current
[difftool]
    prompt = false
    trustExitCode = true
[init]
	templatedir = ~/.git-templates
[duet "env"]
	git-author-initials = gc
	git-author-name = Gabriele Cipriano
	git-author-email = gcipriano@pivotal.io
	mtime = 1591258089
	git-committer-initials = cw
	git-committer-name = Chris Whitty
	git-committer-email = cwhitty@pivotal.io
